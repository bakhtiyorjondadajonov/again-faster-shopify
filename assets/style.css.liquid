:root{
    --main-font:'Open Sans', sans-serif;
    --secondary-font:'Oswald', sans-serif;
    --color-primary:#000000;
    --color-primary--light:#ffffff;
    --color-primary--medium:#C2A578;
    --color-grey--text:#767676;
    --color-grey:#C4C4C4;
    --color-grey--light:#F8F8F8;
    --color-success:#6FCF97;
    --color-error:#DA0000;
}
*,*:before,*:after{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
html{
    font-family: var(--main-font);
}

/* ----------------- ADVERTISEMENT PART -------------------- */
.advertisement{
    font-family: var(--secondary-font);
   font-size: 12px;
   font-weight: 300;
   line-height: 20px;
   letter-spacing: 0.16em;
   text-align: center;
   color: var(--color-primary);
   padding:1rem;
  
   }
/* ---------------- Header home ------------ */
.header--home{
    height: 100vh;
    width: 100%;
    background-image: url("{{"AF_Hero-full.jpg" | asset_url}}");
    background-position:center;
    background-size:contain;
    padding:4rem;
    padding-top:0;
    display:flex;
    flex-direction:column;
    justify-content:space-between;
}

   /* ------------------- NAVIGATION -------------------- */
   .navigation{
    display: flex;
    justify-content: space-between;
    padding: 1.7rem 0;
   }
   .logo-box{
    height: 20px;
   }
   .list{
    display: flex !important;
   }
   .list--main-menu{
    list-style: none;
    display: flex !important;
font-family:var(--main-font);
font-size: 12px;
font-weight: 400;
line-height: 17px;
letter-spacing: 0.175em;
text-align: left;
text-transform: uppercase;
gap: 4rem;
}
.list--search{
   gap: 2.1rem; 
}
.item--main-menu>*{
       color: var(--color-primary--light);
text-decoration: none;
   }
